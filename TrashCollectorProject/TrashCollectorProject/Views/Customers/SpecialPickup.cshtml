@model TrashCollectorProject.Models.Customer

@{
    ViewBag.Title = "Special Pickup";
}

<h2>Special Pickup</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


<div class="form-horizontal">
    <h4>Customer</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.firstName)
    @Html.HiddenFor(model => model.lastName)
    @Html.HiddenFor(model => model.emailAddress)
    @Html.HiddenFor(model => model.address)
    @Html.HiddenFor(model => model.zipCode)
    @Html.HiddenFor(model => model.weeklyPickupDay)
    @Html.HiddenFor(model => model.UserId)
    @Html.HiddenFor(model => model.Bill)
    @Html.HiddenFor(model => model.holdPickUpEnd)
    @Html.HiddenFor(model => model.holdPickUpStart)

    <div class="form-group">
        @Html.LabelFor(model => model.specialOneTimePickup, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.specialOneTimePickup, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.specialOneTimePickup, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Request" class="btn btn-default" />
        </div>
    </div>
</div>
}
<div>
    @Html.ActionLink("Back to landing", "Index")
</div>
