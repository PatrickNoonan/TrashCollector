@model TrashCollectorProject.Models.Customer

@{
    ViewBag.Title = "HoldPickup";
}

<h2>Request Hold on pickups</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Customer</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.firstName)
    @Html.HiddenFor(model => model.lastName)
    @Html.HiddenFor(model => model.emailAddress)
    @Html.HiddenFor(model => model.address)
    @Html.HiddenFor(model => model.zipCode)
    @Html.HiddenFor(model => model.weeklyPickupDay)
    @Html.HiddenFor(model => model.UserId)
    @Html.HiddenFor(model => model.bill)
    @*@Html.HiddenFor(model => model.holdPickUpEnd)
    @Html.HiddenFor(model => model.holdPickUpStart)*@
    @Html.HiddenFor(model => model.specialOneTimePickup)

    <div class="form-group">
        @Html.LabelFor(model => model.holdPickUpStart, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.holdPickUpStart, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.holdPickUpStart, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.holdPickUpEnd, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.holdPickUpEnd, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.holdPickUpEnd, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Request" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
