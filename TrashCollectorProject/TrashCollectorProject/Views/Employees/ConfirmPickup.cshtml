@model TrashCollectorProject.Models.Customer

@{
    ViewBag.Title = "Confirm Customer Pickup";
}

<h2>Confirm Pickup</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Employee</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.firstName)
    @Html.HiddenFor(model => model.lastName)
    @Html.HiddenFor(model => model.emailAddress)
    @Html.HiddenFor(model => model.address)
    @Html.HiddenFor(model => model.zipCode)
    @Html.HiddenFor(model => model.weeklyPickupDay)
    @Html.HiddenFor(model => model.specialOneTimePickup)
    @Html.HiddenFor(model => model.UserId)
    @Html.HiddenFor(model => model.Bill)
    @Html.HiddenFor(model => model.specialPickupConfirmed)
    @Html.HiddenFor(model => model.weeklyPickupConfirmed)
    @Html.HiddenFor(model => model.holdPickUpStart)
    @Html.HiddenFor(model => model.holdPickUpEnd)

    <div class="form-group">
        @Html.LabelFor(model => model.weeklyPickupDay, htmlAttributes: new { @class = "control-label col-md-2" })
        @Html.DisplayFor(model => model.weeklyPickupDay, "", new { @class = "text-danger" })

    </div>



    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Confirm this pickup" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>